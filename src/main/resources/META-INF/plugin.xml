<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>alxmag.lorem</id>
    <name>Lorem</name>
    <vendor>alx-mag</vendor>

    <depends>com.intellij.modules.platform</depends>

    <resource-bundle>messages.MyBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">

    </extensions>

    <actions>
        <action class="com.github.alxmag.loremipsumgenerator.action.placeholdertext.ui.LoremPlaceholderTextActionGroup"
                id="lorem.TextAction">
            <override-text place="popup@LoremEditorPopup" />
        </action>

        <action class="com.github.alxmag.loremipsumgenerator.action.name.LoremNameActionGroup"
                id="lorem.NameAction">
            <override-text place="popup@LoremEditorPopup"/>
        </action>

        <action class="com.github.alxmag.loremipsumgenerator.action.email.LoremEmailAction"
                id="lorem.EmailAction">
            <override-text place="popup@LoremEditorPopup"/>
        </action>

        <action class="com.github.alxmag.loremipsumgenerator.action.phone.LoremPhoneAction"
                id="lorem.PhoneAction">
            <override-text place="popup@LoremEditorPopup"/>
        </action>

        <action class="com.github.alxmag.loremipsumgenerator.action.city.LoremCityAction"
                id="lorem.CityAction">
            <override-text place="popup@LoremEditorPopup"/>
        </action>

        <action class="com.github.alxmag.loremipsumgenerator.action.country.LoremCountryAction"
                id="lorem.CountryAction">
            <override-text place="popup@LoremEditorPopup"/>
        </action>

        <action class="com.github.alxmag.loremipsumgenerator.action.state.LoremStateAction"
                id="lorem.StateAction">
            <override-text place="popup@LoremEditorPopup"/>
        </action>

        <!-- Popup menu group -->
        <group id="lorem.GeneratePopupGroup">
            <separator key="separator.text.text"/>
            <reference id="lorem.TextAction"/>

            <separator key="separator.personal.information.text"/>
            <reference id="lorem.NameAction"/>
            <reference id="lorem.EmailAction"/>
            <reference id="lorem.PhoneAction"/>

            <separator key="separator.location.text"/>
            <reference id="lorem.CityAction"/>
            <reference id="lorem.CountryAction"/>
            <reference id="lorem.StateAction"/>
        </group>

        <!-- Main popup action -->
        <action id="lorem.GeneratePopupAction"
                class="com.github.alxmag.loremipsumgenerator.action.LoremGeneratePopUpAction">
            <add-to-group group-id="GenerateGroup" anchor="last"/>
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>

            <keyboard-shortcut first-keystroke="control shift G" keymap="$default"/>
        </action>
    </actions>
</idea-plugin>
